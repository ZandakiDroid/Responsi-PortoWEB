{
    "version": 2,
    "builds": [
        { "src": "backend/index.js", "use": "@vercel/node" },
        { "src": "frontend/dist/**", "use": "@vercel/static" }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/backend/index.js"
        },
        {
            "source": "/((?!api/|.*\\..*).*)",
            "destination": "/frontend/dist/index.html"
        }
    ]
}
